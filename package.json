{
  "name": "gestionels",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@google/clasp": "^3.1.1",
    "@rushstack/eslint-patch": "^1.14.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-googleappsscript": "^1.0.5",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-import": "^2.32.0",
    "gitleaks": "^1.0.0",
    "prettier": "^3.6.2",
    "svgo": "^3.3.2"
  },
  "scripts": {
    "lint": "eslint --no-error-on-unmatched-pattern .",
    "fmt": "prettier -w .",
    "clasp:login": "clasp login",
    "clasp:push": "clasp push -f",
    "clasp:version": "clasp version 'auto: CI'",
    "clasp:deploy": "clasp deploy -d 'client'",
    "clasp:deploy:admin": "clasp deploy -d 'admin'",
    "test:assistant:flag": "clasp run test_callChatGPT_refuseSansFlag",
    "test:assistant:success": "clasp run test_askAssistantOnThread_success",
    "test:assistant:error": "clasp run test_askAssistantOnThread_apiError",
    "test:assistant": "npm run clasp:push && npm run test:assistant:flag && npm run test:assistant:success && npm run test:assistant:error",
    "test:portal:signed": "clasp run test_client_getPortalLink_signed",
    "test:portal:send": "clasp run test_envoyerLienEspaceClient_smoke",
    "test:portal": "npm run test:portal:signed && npm run test:portal:send",
    "ci:deploy": "npm run clasp:push && npm run test:assistant && npm run test:portal && npm run clasp:version && npm run clasp:deploy",
    "icons:optimize": "svgo icons.svg",
    "validate:manifest": "node tools/validate-appsscript.js"
  }
}
